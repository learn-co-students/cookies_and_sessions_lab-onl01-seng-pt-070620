<h1>All produtcs</h1>
<ul>
    <% cart.each do |product| %>
        <li>
            <%= product %>
        </li>
    <% end %>
</ul>

<h1>Add a new product item</h1>
<%= form_tag add_product_path do %>
    <%= label_tag :product %>
    <%= text_field_tag :product %>
    <%= submit_tag "add to cart" %>
<% end %>